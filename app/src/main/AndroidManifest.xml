<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orc.offroadcompanion">

    <application
        android:allowBackup="true"
        android:icon="@drawable/orc_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".NavigationMenuActivity" />
        <activity android:name=".OrientationActivity" />
        <activity android:name=".InformationMenuActivity"></activity>
    </application>

</manifest>